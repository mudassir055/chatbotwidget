{
  "name": "embeddable-chatbot-widget",
  "version": "2.0.0",
  "description": "A beautiful, embeddable chatbot widget with voice support, user identification, and chat history persistence",
  "main": "embed.js",
  "homepage": "https://github.com/yourusername/chatbot-widget",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/chatbot-widget.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/chatbot-widget/issues"
  },
  "scripts": {
    "start": "npx serve . -p 8000 --cors",
    "dev": "npx serve . -p 3000 --cors",
    "test": "echo \"Open demo.html in your browser to test the widget\"",
    "build": "echo \"No build step required - using vanilla JavaScript\"",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir .",
    "serve:cors": "npx serve . -p 8000 --cors",
    "demo": "npx serve . -p 3000 --cors && echo \"Demo available at http://localhost:3000/demo.html\""
  },
  "keywords": [
    "chatbot",
    "widget",
    "embed",
    "voice",
    "speech",
    "webhook",
    "chat",
    "assistant",
    "user-identification",
    "chat-history",
    "localStorage",
    "embeddable",
    "javascript",
    "vanilla-js"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "files": [
    "embed.js",
    "demo.html",
    "test-user-id-storage.html",
    "README.md",
    "DEPLOYMENT_GUIDE.md",
    "EMBEDDING_GUIDE.md",
    "examples/"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "serve": "^14.0.0"
  },
  "cdn": "https://unpkg.com/embeddable-chatbot-widget@latest/embed.js",
  "jsdelivr": "https://cdn.jsdelivr.net/npm/embeddable-chatbot-widget@latest/embed.js"
}
